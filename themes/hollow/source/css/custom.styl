// turn absolute to fixed
a.nav-back {
    position: fixed;
}

// custom title font
.post-preview > a > .post-title {
    font-size: 1.6em;
}

// 黑暗模式
@media (prefers-color-scheme: dark) {
    :root {
        --bg-color: #1b1c1c;
        --font-color: #c9c0b0;
        --line-color: #3b3e3d;
    }

    .fa-camera-retro, .fa-search, post-heading {
        color: var(--font-color);
    }

    body, .intro, .post-title, .post-preview a p, .post-heading {
        background: var(--bg-color);
        color: var(--font-color);
    }

    figure.highlight {
        background-color: var(--bg-color);
        color: var(--font-color);
        border-color: var(--line-color);
        text-shadow: #1b1c1c 0px 0px 1px;
    }

    figure.highlight table .line {
        color: var(--font-color);
    }

    code {
        color: #df5874;
        background-color: #2c171b;
    }

    article .container .row img {
        opacity: .7;
        transition: opacity .5s ease-in-out;
    }

    article .container .row img:hover {
        opacity: 1;
    }
}

// 自适应宽度
@media (min-width: 1600px) {
    .col-lg-offset-2 {
        margin-left: 0%;
    }

    .col-lg-8 {
        width: 100%;
    }
}

// 文章内标题居中
@media screen and (min-width: 768px) {
    .intro-header .post-heading h1 {
        text-align: center;
    }
}

@media screen and (max-width: 767px) {
    // 双栏改为单栏
    .post-title {
        display: block !important;
        width: 100% !important;
    }
    .post-preview p {
        display: block !important;
        padding-top: 80px;
        margin-left: 0px !important;
        padding-left: 0px !important;
        width: 100% !important;
    }
    .post-preview a p {
        display: block !important;
        margin-left: 0px !important;
        padding-left: 0px !important;
        width: 100% !important;
    }
    .post-preview a p a {
        display: block !important;
        margin-left: 0px !important;
        padding-left: 0px !important;
        width: 100% !important;
    }
}

// 图片样式圆角
article .container .row img {
    border-radius: 0.3125em;
    box-shadow: 0 2px 4px 0 rgba(34, 36, 38, 0.12), 0 2px 10px 0 rgba(34, 36, 38, 0.08);
    position: relative;
    left: 0%;
    margin: 10px auto;
    // max-width: 95% !important;
    height: auto;
    display: block;
}

// keystroke
kbd {
    display: inline-block;
    margin: 0 0.1em;
    padding: 0.1em 0.6em;
    font-family: Arial, 'Helvetica Neue', Helvetica, sans-serif;
    font-size: 11px;
    line-height: 1.4;
    color: #242729;
    text-shadow: 0 1px 0 #FFF;
    background-color: #e1e3e5;
    border: 1px solid #adb3b9;
    border-radius: 3px;
    box-shadow: 0 1px 0 rgba(12, 13, 14, 0.2), 0 0 0 2px #FFF inset;
    white-space: nowrap;
}

.highlight.java .code:before {
    content: "Java"
}

.highlight.html .code:before {
    content: "HTML"
}

.highlight.js .code:before {
    content: "JavaScript"
}

.highlight.bash .code:before {
    content: "Shell"
}

.highlight.css .code:before {
    content: "CSS"
}

.highlight.python .code:before {
    content: "Python"
}

.code:before {
    position: absolute;
    top: 0;
    right: 0;
    padding: 5px 10px 0;
    color: #ccc;
    text-align: right;
    font-size: 14px;
}

